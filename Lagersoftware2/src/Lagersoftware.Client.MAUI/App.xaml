<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lagersoftware.Client.MAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#0078D4</Color>
            <Color x:Key="SecondaryColor">#005A9E</Color>
            <Color x:Key="AccentColor">#00BCF2</Color>
            <Color x:Key="DangerColor">#D13438</Color>
            <Color x:Key="SuccessColor">#107C10</Color>
            <Color x:Key="WarningColor">#FF8C00</Color>
            <Color x:Key="BackgroundColor">#F3F2F1</Color>
            <Color x:Key="SurfaceColor">#FFFFFF</Color>
            <Color x:Key="TextPrimaryColor">#323130</Color>
            <Color x:Key="TextSecondaryColor">#605E5C</Color>

            <Style TargetType="Button" x:Key="PrimaryButtonStyle">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="Padding" Value="16,8" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <Style TargetType="Button" x:Key="DangerButtonStyle">
                <Setter Property="BackgroundColor" Value="{StaticResource DangerColor}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="Padding" Value="16,8" />
            </Style>

            <Style TargetType="Frame" x:Key="CardStyle">
                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="16" />
                <Setter Property="HasShadow" Value="True" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
