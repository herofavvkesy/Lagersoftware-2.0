<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lagersoftware.Client.MAUI.Pages.StockMovementPage"
             Title="Lagerbuchung"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ScrollView>
        <VerticalStackLayout Spacing="12" Padding="16">
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Buchungstyp" FontAttributes="Bold" />
                    <Picker x:Name="MovementTypePicker" Title="Buchungstyp auswÃ¤hlen">
                        <Picker.Items>
                            <x:String>Wareneingang</x:String>
                            <x:String>Warenausgang</x:String>
                            <x:String>Bestandskorrektur</x:String>
                        </Picker.Items>
                    </Picker>

                    <Label Text="Produkt" FontAttributes="Bold" />
                    <SearchBar x:Name="ProductSearchBar" Placeholder="Produkt suchen..." TextChanged="OnProductSearchChanged" />
                    <Picker x:Name="ProductPicker" Title="Produkt auswÃ¤hlen" />

                    <Label Text="Barcode scannen" FontAttributes="Bold" />
                    <HorizontalStackLayout Spacing="8">
                        <Entry x:Name="BarcodeEntry" Placeholder="Barcode eingeben" HorizontalOptions="FillAndExpand" />
                        <Button Text="Suchen" BackgroundColor="{StaticResource PrimaryColor}" TextColor="White" CornerRadius="4" Clicked="OnBarcodeScanClicked" />
                    </HorizontalStackLayout>

                    <Label Text="Menge" FontAttributes="Bold" />
                    <Entry x:Name="QuantityEntry" Placeholder="Menge" Keyboard="Numeric" />

                    <Label Text="Bemerkung" FontAttributes="Bold" />
                    <Entry x:Name="NoteEntry" Placeholder="Optionale Bemerkung" />

                    <Button Text="Buchen" Style="{StaticResource PrimaryButtonStyle}" Clicked="OnBookClicked" Margin="0,8,0,0" />
                    <Label x:Name="ResultLabel" IsVisible="False" HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
