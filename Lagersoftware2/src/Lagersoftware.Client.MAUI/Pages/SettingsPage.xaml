<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lagersoftware.Client.MAUI.Pages.SettingsPage"
             Title="Einstellungen"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ScrollView>
        <VerticalStackLayout Spacing="12" Padding="16">
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Server-Adresse" FontAttributes="Bold" />
                    <Entry x:Name="ServerUrlEntry" Placeholder="http://localhost:5000" Keyboard="Url" />

                    <Label Text="Sync-Intervall (Minuten)" FontAttributes="Bold" />
                    <Entry x:Name="SyncIntervalEntry" Placeholder="5" Keyboard="Numeric" />

                    <Label Text="Auto-Sync" FontAttributes="Bold" />
                    <Switch x:Name="AutoSyncSwitch" />

                    <Button Text="Einstellungen speichern" Style="{StaticResource PrimaryButtonStyle}" Clicked="OnSaveClicked" />
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Benutzerinfo" FontAttributes="Bold" />
                    <Label x:Name="UserInfoLabel" TextColor="{StaticResource TextSecondaryColor}" />
                    <Button Text="Abmelden" Style="{StaticResource DangerButtonStyle}" Clicked="OnLogoutClicked" />
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Letzter Sync" FontAttributes="Bold" />
                    <Label x:Name="LastSyncLabel" TextColor="{StaticResource TextSecondaryColor}" />
                    <Button Text="Jetzt synchronisieren" Style="{StaticResource PrimaryButtonStyle}" Clicked="OnSyncNowClicked" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
