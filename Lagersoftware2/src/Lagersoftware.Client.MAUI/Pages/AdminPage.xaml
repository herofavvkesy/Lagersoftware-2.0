<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lagersoftware.Client.MAUI.Pages.AdminPage"
             Title="Administration"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ScrollView>
        <VerticalStackLayout Spacing="12" Padding="16">

            <!-- Users Section -->
            <Label Text="Benutzerverwaltung" FontAttributes="Bold" FontSize="16" />
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="10">
                    <Button Text="+ Neuen Benutzer anlegen" Style="{StaticResource PrimaryButtonStyle}" Clicked="OnAddUserClicked" />
                    <CollectionView x:Name="UsersList" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Style="{StaticResource CardStyle}" Margin="0,0,0,4">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <VerticalStackLayout Grid.Column="0">
                                            <Label Text="{Binding Username}" FontAttributes="Bold" />
                                            <Label Text="{Binding Role}" FontSize="12" TextColor="{StaticResource TextSecondaryColor}" />
                                        </VerticalStackLayout>
                                        <Button Grid.Column="1" Text="Löschen" BackgroundColor="{StaticResource DangerColor}" TextColor="White" CornerRadius="4" FontSize="12"
                                                CommandParameter="{Binding Id}" Clicked="OnDeleteUserClicked" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Data Management -->
            <Label Text="Datenverwaltung" FontAttributes="Bold" FontSize="16" />
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="10">
                    <Button Text="Vollständigen Sync erzwingen" Style="{StaticResource PrimaryButtonStyle}" Clicked="OnForceFullSyncClicked" />
                    <Button Text="Daten exportieren (SpeicherDaten)" BackgroundColor="{StaticResource SecondaryColor}" TextColor="White" CornerRadius="4" Padding="16,8" Clicked="OnExportClicked" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
